\ProvidesPackage{jmlr2e}
\RequirePackage{natbib}
\RequirePackage{graphicx}
\RequirePackage{amsthm}

% Minimal definitions to satisfy the JMLR template commands
% if the official style file is missing.
\newcommand{\jmlrheading}[7]{}
\newcommand{\ShortHeadings}[2]{
  \markboth{#1}{#2}
  \pagestyle{myheadings}
}
\newcommand{\firstpageno}[1]{
  \setcounter{page}{#1}
}

% Author formatting
\newcommand{\name}[1]{\textbf{#1}}
\newcommand{\addr}[1]{\\\emph{#1}}
\newcommand{\email}[1]{\\\texttt{#1}}
\providecommand{\AND}{}
\renewcommand{\AND}{\\ \vspace{5mm} \\}

% Editor
\newcommand{\editor}[1]{
  % \par\vspace*{1cm}
  % \noindent\textbf{Editor:} #1
}

% Acknowledgments
\newcommand{\acks}[1]{
  \section*{Acknowledgments}
  #1
}

% Theorem environments
\newtheorem{theorem}{Theorem}[section]
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{corollary}[theorem]{Corollary}
\theoremstyle{definition}
\newtheorem{definition}[theorem]{Definition}
\newtheorem{assumption}[theorem]{Assumption}
\theoremstyle{remark}
\newtheorem{remark}[theorem]{Remark}
\newtheorem{example}[theorem]{Example}

% Keywords environment
\newenvironment{keywords}{%
  \par\vspace{0.5cm}\noindent\textbf{Keywords:} %
}{%
  \par%
}

